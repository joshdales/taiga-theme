{
  "name": "taiga-theme",
  "displayName": "Taiga Theme",
  "description": "A dark theme for Visual Studio Code",
  "publisher": "joshdales",
  "icon": "logo.png",
  "license": "MIT",
  "galleryBanner": {
    "color": "#0D141F",
    "theme": "dark"
  },
  "version": "2.0.0",
  "engines": {
    "vscode": "^1.40.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joshdales/taiga-vs-code-theme"
  },
  "bugs": {
    "url": "https://github.com/joshdales/taiga-vs-code-theme/issues"
  },
  "homepage": "https://github.com/joshdales/taiga-vs-code-theme",
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "dark theme",
    "taiga"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Taiga - Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/dark-color-theme.json"
      },
      {
        "label": "Taiga - Light",
        "uiTheme": "vs",
        "path": "./themes/light-color-theme.json"
      }
    ]
  },
  "scripts": {
    "build": "node src/buildTheme.js",
    "watch": "nodemon -w ./src/templates ./src/buildTheme.js",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "json5": "^2.2.1",
    "mustache": "^4.1.0",
    "nodemon": "^2.0.19",
    "vsce": "^2.9.2"
  }
}
